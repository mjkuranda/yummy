<section id="filters">
    <form action="" method="get">
        <div>
            <h2>Składniki</h2>
            <div class="category-container">
                {{#each filter.categorized as |cat|}}
                    <div class="category">
                        <h3>{{cat.category}}</h3>
                        <ul>
                            {{#each this.ingredients as |ing|}}
                                <li>
                                    <input type="checkbox" name="ings[]" data-id="{{ing.icon.name}}" value="{{ing.icon.name}}" {{ tryToCheck ing.icon.name}} />
                                    <img
                                        class="icon"
                                        src="{{ing.icon.src}}"
                                        alt="'{{ing.icon.name}}' ingredient image"
                                        author="{{ing.icon.link}}"
                                    ></img>
                                    <label>{{ing.name}}</label>
                                </li>
                            {{/each}}
                        </ul>
                    </div>
                {{/each}}
            </div>
        </div>
        <div>
            <h2>Typy</h2>
            <div class="meal-types-container">
                <ul>
                    {{#each mealTypes as |type|}}
                    <li><input type="checkbox" name="types[]" data-type-k="{{type.k}}" data-type-v="{{type.v}}" value="{{type.k}}" {{ tryToCheckType type.k }} /><label>{{type.v}}</label></li>
                    {{/each}}
                </ul>
            </div>
        </div>
        <div class="flex-center">
            <button type="submit">Wyszukaj</button>
        </div>
    </form>
</section>

