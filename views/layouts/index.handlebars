            href="https://fonts.googleapis.com/css2?family=Sacramento"
            rel="stylesheet"
        />

        <link
            rel="stylesheet"
            href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css"
        />

        <link rel="stylesheet" href="{{prefixPath}}css/basic.css" />
        {{#each elements.links}}
            <link rel="stylesheet" href="{{prefix}}css/{{link}}.css" />
        {{/each}}

        {{#each elements.scripts}}
            <script defer src="{{prefix}}js/{{link}}.js"></script>
        {{/each}}

        <script>
            function move(url) { window.location.assign(url); } function
            setHash(loc) { if(loc === '' || !loc) history.replaceState({},
            document.title, window.location.href.split('#')[0]);
            history.replaceState({}, document.title,
            `${window.location.href.split('#')[0]}#${loc}`); } function
            setUrl(loc) { move('/search?x=5'); return; let vars =
            window.location.href.split('?')[1].split('&'); const hash =
            vars[vars.length - 1].split('#')[1]; vars[vars.length - 1] =
            vars[vars.length - 1].split('#')[0]; const isPage = vars.some(v => {
            return v.substr(0, 4) === 'page'; }); let url =
            window.location.href.split('?')[0] + '?pagexxx=1&';
            vars.forEach(function (v, i) { if (i !== 0) url += '&'; url += v;
            }); if(loc) {url += '#' + loc;} alert(url); history.replaceState({},
            document.title, url); }
        </script>
    </head>
    <body>
        {{#if isNotMain}}
            <header>
                <div class="flex-center">
                    <div class="flex-left">
                        <div id="logo"><img
                                src="{{prefixPath}}icons/yummy-64.png"
                                width="64px"
                                height="64px"
                            /></div>
                        <h1>Yummy</h1>
                    </div>
                    <nav class="flex-left">
                        <a href="/">Strona główna</a>
                        <a href="/#description">O stronie</a>
                    </nav>
