<main>
    <div class="meals-add-nav">
        <a href="{{prefixPath}}meals/add"><i
                class="fa fa-chevron-circle-left"
            ></i>Wróć, by dodać kolejny posiłek</a>
    </div>
    <div class="new-meal-container">
        <div class="flex-center"><h2>Dodano nowy posiłek!</h2></div>
        <div class="flex-center">
            <div class="new-meal-data-container">
                <div><h3>{{meal.title}}</h3></div>
                <div><p>{{meal.description}}</p></div>
                <div><p>{{mealType}}</p></div>
                <div class="flex-center">
                    {{#if meal.image}}
                    <img src="../../uploads/{{meal.image}}" alt="{{meal.title}} photo" width="256" />
                    {{else}}
                    <img src="../../icons/no-image.png" alt="{{meal.title}} no photo" width="256" />
                    {{/if}}
                </div>
                <div class="new-meal-ingredients-container">
                    <ul>
                        {{#each ingredients as |ing|}}
                            <li class="flex-center">
                                <img
                                        class="icon"
                                        src="../{{ing.icon.src}}"
                                        alt="'{{ing.icon.name}}' ingredient image"
                                        author="{{ing.icon.link}}"
                                    ></img>
                                <span>{{ing.name}}</span>
                            </li>
                        {{/each}}
                    </ul>
                </div>
                <div><p><b>Dodał:</b> <i>{{meal.author}}</i></p></div>
            </div>
        </div>
        <div class="new-meal-buttons">
            <div class="flex-center"><button onClick="move('/search?')">Wyszukaj posiłek</button></div>
            <div class="flex-center"><button onClick="move('/')">Wróć do strony głównej</button></div>
        </div>
    </div>
</main>